<h2>Edit Movie</h2>

<form action="/movies/{{editMovie.id}}" method="post">
<label for="title">Title:</label>
<input value="{{editMovie.title}}" type="text" name="title" id="title">
<label for="genre">Genre:</label>
<input value="{{editMovie.genre}}" type="text" name="genre" id="genre">
<label for="plot">Plot:</label>
<input value="{{editMovie.plot}}" type="text" name="plot" id="plot">
<label value="{{editMovie.cast}}" for="cast">Cast:</label>
<select multiple name="cast" id="cast">
    <option value="" disabled selected>Select celebrities</option>
    {{#each allCelebs}}
    <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
</select>
<button>Send Changes</button>
</form>